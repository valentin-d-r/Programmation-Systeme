<Window x:Class="AppGraphique.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppGraphique"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Margin="0,-51,0,0" RenderTransformOrigin="0.504,0.526" Background="#FF262626">
        <Button Content="Lancer" HorizontalAlignment="Left" Margin="625,338,0,0" VerticalAlignment="Top" Height="48" Width="134" Background="#FFFF4C47" Foreground="#FFCEDBFE" FontSize="16" FontWeight="Bold" Click="Button_Click_3"/>
        <TextBox x:Name="tbSelectSomeTextFR" HorizontalAlignment="Left" Margin="230,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Height="48" Background="#FFFF4C47" Foreground="#FFCEDBFE" FontSize="16" FontWeight="Bold" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="TextboxSourceFR" HorizontalAlignment="Left" Margin="230,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Height="48" Background="#FFFF4C47" Foreground="#FFCEDBFE" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="TextboxDestinationFR" HorizontalAlignment="Left" Margin="230,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Height="48"  Background="#FFFF4C47" Foreground="#FFCEDBFE" FontSize="16" FontWeight="Bold"/>
        <RadioButton Content="Cryptage" HorizontalAlignment="Left" Margin="31,371,0,0" VerticalAlignment="Top" Foreground="White" Checked="RadioButton_Checked"/>
        <RadioButton Content="Décryptage" HorizontalAlignment="Left" Margin="230,374,0,0" VerticalAlignment="Top" Background="White" OpacityMask="#FFA06F33" Foreground="White"/>
        <Button x:Name="Source3Points" Content="..." HorizontalAlignment="Left" Margin="605,183,0,0" VerticalAlignment="Top" Width="21" Background="#FFFF4C47" Foreground="#FFCEDBFE" Click="Button_Click" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="DestinationPath" Content="..." HorizontalAlignment="Left" Margin="605,270,0,0" VerticalAlignment="Top" Width="21" Background="#FFF84F4A" Foreground="#FFCEDBFE" Click="DestinationPath_Click" FontSize="16" FontWeight="Bold"/>
        <Label Content="Appelation" HorizontalAlignment="Left" Margin="31,72,0,0" VerticalAlignment="Top" Height="48" Width="103" Foreground="#FFCEDBFE" Background="#FFFF4C47" FontSize="16" FontWeight="Bold"/>
        <Label Content="Source" HorizontalAlignment="Left" Margin="31,160,0,0" VerticalAlignment="Top" Height="48" Width="103" Foreground="#FFCEDBFE" Background="#FFFF4C47" FontWeight="Bold" FontSize="16"/>
        <Label Content="Destination" HorizontalAlignment="Left" Margin="31,247,0,0" VerticalAlignment="Top" Height="48" Width="103" Foreground="#FFCEDBFE" Background="#FFFF4C47" FontSize="16" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="99" Margin="701,50,0,0" VerticalAlignment="Top" Width="99" Source="/Image1.png"/>
        <Button Content="Revenir au menu" HorizontalAlignment="Left" Margin="625,406,0,0" VerticalAlignment="Top" Click="Button_Click_1" Height="38" Width="134" Foreground="#FFCEDBFE" Background="#FFFF4C47" FontSize="16" FontWeight="Bold"/>
        <Button Content="..." HorizontalAlignment="Left" Margin="103,366,0,0" VerticalAlignment="Top" Width="23" Click="Button_Click_2" Background="#FFFF4C47" Foreground="#FFCEDBFE" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
